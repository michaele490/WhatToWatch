<div class="container mt-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div class="flex-grow-1 text-center">
                <h1>YouTube Videos</h1>
            </div>
        </div>
    </div>
    <div class="row" style="margin-bottom: 25px;">
        <div class="card mx-auto p-4" style="max-width: 400px; background-color: #FFECFF;">
            <div>
                <h2 class="mb-3" style="font-weight: bold; text-align: center;"><%= @youtube.title %></h2>
                <p class="mb-4">Channel: <%= @youtube.channel %></p>
                <p class="mb-4"> Minutes: <%= @youtube.minutes %></p>
                <% if @youtube.link.present? %>
                    <p style="text-align: center">
                        <%= link_to 'Watch', @youtube.link, target: '_blank' %>
                    </p>
                <% end %>
            </div>
            <div class="d-flex justify-content-between">
                <%= button_to 'Remove Video', youtube_path(@youtube), method: :delete, class: "btn btn-danger w-45" %>
                <%= button_to 'Edit Video', edit_youtube_path(@youtube), method: :get, class: "btn btn-primary w-45" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <%= button_to 'Back', youtubes_path, method: :get, class: 'return-btn' %>
        </div>
    </div>
</div>